<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/noteCard"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="5dp"
    android:layout_marginVertical="10dp"
    android:background="@drawable/custom_rounded_note_border"
    android:minWidth="200dp"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/notesTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Retrofit with MVVM"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textFontWeight="@integer/material_motion_duration_long_1"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/notesDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/notesTitle"
        android:layout_marginTop="20dp"
        android:text="Retrofit is use to get json data from api or server."
        android:textColor="@color/black"
        android:textFontWeight="@integer/material_motion_duration_long_1"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/noteCategory"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:minWidth="40dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/custom_note_category_rounded_background"
        android:gravity="center"
        android:paddingHorizontal="10dp"
        android:paddingVertical="5dp"
        android:text="D"
        android:textColor="@color/black"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/notesPublishedDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="end"
        android:text="12/02/2023"
        android:textColor="@color/black"
        android:textFontWeight="@integer/material_motion_duration_long_1"
        android:textSize="16sp" />

    <CheckBox
        android:id="@+id/noteStatusCheckbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        />

</androidx.appcompat.widget.LinearLayoutCompat>